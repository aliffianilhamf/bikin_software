---
import Timeline from "../ui/timeline/Timeline.astro";
import { servicesIcons } from "../../data/services";

interface ServiceItem {
  title: string;
  category: string;
  bestFor: string;
  description: string;
  technologies?: string[];
}

interface Props {
  items: ServiceItem[];
  title?: string;
}

const { items, title } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto max-w-6xl px-5 md:px-6">
    {
      title && (
        <h2 class="text-3xl md:text-4xl font-semibold text-center mb-10 text-foreground">
          {title}
        </h2>
      )
    }

    <Timeline items={items} icons={servicesIcons} centered={false} />
  </div>
</section>
