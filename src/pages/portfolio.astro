import Projects from "../components/sections/Projects.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import GlowLineSeparator from "../components/ui/separator/GlowLineSeparator.astro";
---

<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead title="Portfolio" description="Selected projects and playbooks" />
  </head>
  <body>
    <Header />
    <main>
      <HeroSection
        title="Project kami"
        subtitle="Beberapa contoh solusi digital yang telah kami bangun untuk membantu bisnis tumbuh lebih cepat."
      />
      <Projects />
      <GlowLineSeparator />
    </main>
    <Footer />
  </body>
</html>
